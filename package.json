{
  "name": "cradova",
  "version": "1.0.5",
  "description": "Web framework for building web apps and PWAs",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "module": "dist/module.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FridayCandour/cradova.git"
  },
  "scripts": {
    "tsc": "tsc --build --clean && tsc",
    "cp": "cp site/index.html dist/site && cp -r site/assets dist/site && cp -r site/styles dist/site && cp -r site/prism dist/site",
    "dev": "parcel build && npm run cp && parcel watch",
    "build": "npm run tsc && parcel build && npm run cp",
    "serve": "parcel dist/site/index.html",
    "lint": "eslint . --fix"
  },
  "keywords": [
    "framework",
    "javascript",
    "typescript",
    "web",
    "app",
    "PWA",
    "android",
    "IOS",
    "windows",
    "linux",
    "mac"
  ],
  "author": "fridaycandour",
  "license": "Apache-2.0",
  "types": "dist/index.d.ts",
  "bugs": {
    "url": "https://github.com/FridayCandour/cradova/issues"
  },
  "homepage": "https://github.com/FridayCandour/cradova#readme",
  "displayName": "cradova web framework",
  "funding": "https://github.com/FridayCandour/cradova#readme",
  "typings": "typescript",
  "devDependencies": {
    "@parcel/packager-ts": "^2.8.2",
    "@parcel/transformer-typescript-types": "^2.8.2",
    "@types/jest": "^29.2.4",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "parcel": "^2.8.2",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  }
}
