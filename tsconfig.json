{
  "compilerOptions": {
    // enable latest features
    "lib": ["esnext", "esnext", "dom", "dom.iterable"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "declaration": true,
    // "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "useUnknownInCatchVariables": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "tests/dist",
    "stripInternal": true
  },
  "include": ["src"]
}
